<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <%- include('header') %>
    <form hidden id="profileForm" action="/update-profile" method="post" enctype="multipart/form-data">
      <input type="file" name="profileImage" accept="image/*" onchange="submitForm()" required>
    </form>

    <div class="containerpers">
      <div class="cardpers">
    
    <div class="profileparent">
     
      <div class="profile-picture">
        <img src="/images/uploads/<%= user.dp %>">
        <span id="editdp" class="editicon">
          <i class="ri-pencil-line"></i>
        </span>
      </div>
    </div>
        <h2 class="name"><%= user.fullName %></h2>
        <h3 class="username">@ <%= user.username %></h3>
        <p class="tagline">Lorem ipsum dolor sit amet consectetur adipisicing.</p>
        <p class="description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Dignissimos!</p>
        <a href="/logout" class="button"> Log Out</a>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="some caption">
          <input type="file" name="file">
          <input type="submit">
        </form>
      </div>
  </div>
    <div class="container">
      <div class="cards flex">
        <%  user.posts.forEach(function(posts) { %>
          <div class="card" style="width: 18rem;">
            <img src="/images/uploads/<%= posts.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=posts.imageText %></h5>
            </div>
          </div>
      <%  }) %>
      </div>
    
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.querySelector('#editdp').addEventListener("click",function(){
            document.querySelector('#profileForm input').click();  
        })
        function submitForm() {
      document.getElementById('profileForm').submit();
    }

    </script>
  </body>
</html>




